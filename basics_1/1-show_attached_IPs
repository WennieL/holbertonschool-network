#!/usr/bin/env bash
# a Bash script that displays all active IPv4 IPs on the machine itâ€™s executed on.
# Display active IPv4 addresses

# Check if the ip command is available
if command -v ip &> /dev/null; then
    # Use ip command to display IPv4 addresses
    ip -4 addr show | grep -oP '(?<=inet\s)\d+\.\d+\.\d+\.\d+'
else
    # Fallback to hostname -I if ip command is not available
    hostname -I | tr ' ' '\n'
fi